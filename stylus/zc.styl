*
    margin 0
    padding 0
    line-height 1
    box-sizing border-box
    font-family "Microsoft Yahei", Arial
a
    text-decoration none
    color inherit
.clear
    clear both
i

    font-style normal
ul
    list-style none
$green=rgb(0,204,204)
.menu
    width 1200px
    margin 200px auto 0
    border-bottom 2px solid $green
    height 36px
    .left
        float left
    .right
        float right
    .anchor
        &:not(:last-child)
            &:after
                content ''
                width 1px
                height 14px
                background #e6e6e6
                position absolute
                right 0
                top 10px
        &:not(div)
            line-height 34px
            float left
            padding 0 40px
            font-size 14px
            position relative
            &:hover
                color $green
        &.current
            border-bottom 2px solid $green
            height 34px
        &:nth-child(2)
            float left
            position relative
            z-index: 1
            &>a
                line-height 34px
                padding 0 40px
                font-size 14px
                cursor pointer
                &:after
                    content ''
                    background-image url(../img/arrow1.png)
                    width 9px
                    height 6px
                    position absolute
                    top 14px
                    margin-left 3px
                    transition all 0.25s
                &:hover
                    color $green
                    &:after
                        background url(../img/arrow2.png)
                        transform rotate(180deg)
                    &+.fixedBox
                        .items
                            transform translateY(0)
            .fixedBox
                position absolute
                transform translateX(-50%)
                left 50%
                top 24px
                overflow hidden
                .items
                    overflow hidden  //让内部的浮动的内容撑起父级的高度
                    width 124px
                    transform translateY(-100%)
                    border 1px solid rgb(220,220,220)
                    transition all  0.5s
                    background white
                    &:hover
                        transform translateY(0)
                    a
                        float left
                        line-height 40px
                        text-align center
                        width 122px
                        color black
                        font-size 14px
                        &:not(:last-child)
                            border-bottom 1px dotted rgb(220,220,220)
                        &:hover
                            background $green
                            color white
                            cursor pointer
